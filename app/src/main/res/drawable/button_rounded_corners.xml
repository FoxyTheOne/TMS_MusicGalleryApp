<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="24dp" />
            <gradient
                android:angle="315"
                android:endColor="#E9AF1A"
                android:startColor="#F65130" />
        </shape>
    </item>

    <!-- State Pressed-->
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="24dp" />
            <gradient
                android:angle="315"
                android:endColor="#CCE9AF1A"
                android:startColor="#CCF65130" />
        </shape>
    </item>

    <!-- State Enabled -->
    <item android:state_enabled="true">
        <shape>
            <corners android:radius="24dp" />
            <gradient
                android:angle="315"
                android:endColor="#E9AF1A"
                android:startColor="#F65130" />
        </shape>
    </item>

</selector>