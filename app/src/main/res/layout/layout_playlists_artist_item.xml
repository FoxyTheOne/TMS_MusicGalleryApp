<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/playlist_logoCardView"
        android:layout_width="@dimen/item_smallImage"
        android:layout_height="@dimen/item_smallImage"
        android:background="@drawable/layout_artist_item_background"
        app:cardCornerRadius="12dp" >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/playlist_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"/>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/playlist_name"
        style="@style/playlist_name"
        android:layout_width="@dimen/item_smallImage"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="8dp" />

</androidx.appcompat.widget.LinearLayoutCompat>