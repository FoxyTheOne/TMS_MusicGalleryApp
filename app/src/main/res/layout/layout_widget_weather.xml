<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.MusicGalleryApplication.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/widget_background"
    android:orientation="vertical"
    android:theme="@style/Theme.MusicGalleryApplication.AppWidgetContainer">

    <TextView
        android:id="@+id/text_city"
        style="@style/Widget.MusicGalleryApplication.AppWidget.InnerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/space_small"
        android:textStyle="bold"
        tools:text="Test text city" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_small"
            style="@style/Widget.MusicGalleryApplication.AppWidget.InnerView"
            tools:text="Test text temperature" />

        <ImageView
            android:id="@+id/image_weather"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_small"
        style="@style/Widget.MusicGalleryApplication.AppWidget.InnerView"
        tools:text="Test text humidity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_openSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_beforeOrAfterElement"
            style="@style/Widget.MusicGalleryApplication.AppWidget.InnerView"
            tools:text="Open success" />

        <Button
            android:id="@+id/button_openApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_beforeOrAfterElement"
            style="@style/Widget.MusicGalleryApplication.AppWidget.InnerView"
            android:textStyle="normal"
            tools:text="Open App" />
    </LinearLayout>

</LinearLayout>