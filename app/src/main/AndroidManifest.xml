<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tms.lesson01.musicgalleryapplication">

    <!-- Разрешения для выхода в интернет -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Разрешения для использования STORAGE -->
    <permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicGaleryApplication">
        <activity
            android:name=".mvvm.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mvvm.ui.playlist.activityOld.CountriesActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".mvvm.ui.success.activityOld.SuccessLoginActivity"
            android:exported="true">
        </activity>

        <receiver android:name=".mvvm.ui.draftForPractise.alarm.AlarmBroadcast" />
    </application>

</manifest>